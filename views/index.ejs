<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>100 Hours</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous" />

    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <header> 
    <h1> Balance Tracker </h1>
        <!-- your form request will align with the post request! -->
  </header>
  <!-- START HERE FOR THE LAYOUT  -->
  <div class="container-fluid">
    <div class="row">
        <div class="col-md-5 p-4 bg-light">
            <h2 class="h4 mb-3"> New Transaction</h2>

            <div class="formContainer mb-5">
                <form action="/createTransaction" method="POST">

                    <input type="text" placeholder="Description" name="description" class="form-control mb-2"/>
                    <input type="number" placeholder="Amount" name="amount" class="form-control mb-2"/>
                    <div>
                        <select id="type" name="type" class="form-select form-select-sm mb-3" aria-label="Small select example">
                            <option selected>Choose Type</option>
                            <option value="Expense">Expense</option>
                            <option value="Income">Income</option>
                        </select>
                        <button type="submit" class="btn btn-primary w-100">Submit Transaction</button>
                    </div>
                </form>
            </div>

            <div class="dashboard-summary mb-4">
                <h2 class="h4 mb-3">Financial Overview</h2>
                <div class="card p-3">
                        <%
                          let totalIncome = 0;
                          let totalExpense = 0;
                          expenses.forEach(el => {
                              if(el.type === 'Income'){
                                totalIncome += Number(el.amount)
                              } else {
                                totalExpense += Number(el.amount)
                              }
                          })
                        %>
                        <p>Total Income: **<%= totalIncome %>**</p>
                        <p>Total Expense: **<%= totalExpense %>**</p>
                        <p class="fw-bold">Net Balance: **<%= totalIncome - totalExpense %>**</p>
                </div>

            </div>
            
            <div class="transactionsContainer">
                <h3 class="h5 mb-3">My Transactions (<%= expenses.length %>)</h3>
                <!-- TABLE START -->
                 <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Description</th>
                            <th scope="col" class="text-center">Amount</th>
                            <th scope="col" class="text-center">Type</th>
                            <th scope="col" colspan="2" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Loop through expenses -->
                        <% expenses.forEach( el => { %>
                        <!-- Create a variable to hold the type -->
                        <% const typeClass = el.type.toLowerCase(); %>
                        <!-- Creating a second variable to add to the tr variable - parent -->
                        <% const typeClassForLi = el.type.toUpperCase(); %>
                        <tr class="<%= typeClassForLi %>" data-id="<%=el._id%>">
                            
                            <td class="description"><%= el.description %></td>
                            <td class="editable-amount amount <%= el.type.toLowerCase() %> text-center"><%= el.amount %></td>
                            <td class="type text-center"><%= el.type.toUpperCase() %></td>
                            <td class="text-center">
                                <button class="update-button btn btn-sm btn-info w-100">Update Amount</button>
                            </td>
                            <td class="text-center">
                                <button class="delete-button btn btn-sm btn-danger w-100">Delete</button>
                            </td>

                        </tr>
                        <% }) %>
                        
                    </tbody>
                 </table>
                

            </div>

        </div>
        <div class=" calendarContainer col-md-6 p-4">
                <h2 class="h4 mb-3">Transaction Calendar</h2>
                <div id='calendar'></div> 
        </div>
        
    </div>
  </div>


    
    <!--Scripts for bootstrap and fullCalendar   -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.19/index.global.min.js"></script>


    <script src="/main.js" > </script>
    
</body>
</html>